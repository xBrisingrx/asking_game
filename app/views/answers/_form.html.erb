<%= form_with(model: answer) do |form| %>
  <% if answer.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(answer.errors.count, "error") %> prohibited this answer from being saved:</h2>

      <ul>
        <% answer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :answer, "Respuesta"%>
    <%= form.text_field :answer,class:"form-control col-6" %>
  </div>

  <div>
    <%= form.label :is_correct, "Es correcta" %>
    <%= form.check_box :is_correct %>
  </div>

  <%= form.hidden_field :question_id, value: question_id %>

  <div class="mt-2">
    <%= form.submit "Guardar", class:"btn btn-primary" %>
    <%= link_to "Volver", answers_path(question_id: question_id ), class: "btn btn-danger" %>
  </div>
<% end %>
