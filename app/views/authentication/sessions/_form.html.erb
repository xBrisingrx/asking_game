<%= form_with(url: sessions_path ) do |form| %>
  <div class="form-group mb-3">
    <%= form.text_field :login, class: "form-control rounded-3", placeholder: "Nombre de usuario o email", required: true %>
  </div>

  <div class="form-group mb-3">
    <%= form.password_field :password, class: "form-control rounded-3", placeholder:  "Contraseña", required: true %>
  </div>

  <div>
    <%= form.submit "Iniciar sesión", class: "w-100 mb-2 btn btn-lg rounded-3 btn-primary" %>
  </div>
<% end %>

