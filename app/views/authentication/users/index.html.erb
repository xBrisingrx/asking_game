<h1>Usuarios</h1>
<%= link_to "<i class='fui-plus'></i> Registrar usuario".html_safe, new_user_path, class: "btn btn-primary mt-2 mb-4" %>
<table class="table table-hover">
  <thead class="table-dark">
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Rol</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <%= render @users %>
  </tbody>
</table>
