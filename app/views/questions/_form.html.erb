<%= form_with(model: question) do |form| %>
  <% if question.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
        <% question.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :question, "Pregunta" %>
    <%= form.text_field :question, class:"form-control col-6" %>
  </div>

  <div class="form-group">
    <%= form.label :score, "Puntaje" %>
    <%= form.number_field :score, class:"form-control col-6" %>
  </div>

  <div class="form-group">
    <%= form.label :category_id, "Categoria" %>
    <select value="" class="form-control col-6" id="question_category_id" name="question[category_id]" required>
      <% @categories.each do |category|%>
        <option value="<%= category.id %>"> <%= category.name %> </option>
      <% end %>
    </select>
  </div>

  <div>
    <%= form.submit "Guardar", class:"btn btn-primary" %>
    <%= link_to "Volver", questions_path, class: "btn btn-danger" %>
  </div>
<% end %>
