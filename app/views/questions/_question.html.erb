<tr>
  <td> <%= question.question %> </td>
  <td> <%= question.score %> </td>
  <td> <%= question.category.name %> </td>
  <td> 
    <%= link_to inline_svg_tag('menu-alt2.svg', alt: 20, height: 20), answers_path(question_id: question.id), class: "btn btn-sm btn-outline-info", title: "Respuestas" %> 
    <%= link_to inline_svg_tag('pencil.svg', alt: 20, height: 20), edit_question_path(question), class: "btn btn-outline-warning btn-sm", title: "Editar" %>
  </td>
</tr>
