<%= turbo_frame_tag "game" do %>
  <%= form_with model: @game do |form| %>
    <div class="form-group">
      <%= form.label :player, "Nombre de jugador (*): " %>
      <%= form.text_field :player, class: "form-control col-6", required: true %>
    </div>
    <div class="form-group">
      <%= form.label :email, "Email: " %>
      <%= form.email_field :email, class: "form-control col-6", placeholder: "Si desea recibir un email con los resultados" %>
    </div>
    <div class="form-group">
    <%= form.label :category_id, "Categoria en la que desea jugar" %>
    <select value="" class="form-control col-6" id="game_category_id" name="game[category_id]" required>
      <% @categories.each do |category|%>
        <option value="<%= category.id %>"> <%= category.name %> </option>
      <% end %>
    </select>
  </div>

  <%= form.submit "Empezar", class: "btn btn-success"%>
  <% end %>
<% end %>